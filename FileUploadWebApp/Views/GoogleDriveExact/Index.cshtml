
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-muted">Google Drive to Exact</h2><hr />

<div class="row">
    @using (Html.BeginForm("UploadFile", "GoogleDriveExact", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-lg-12 col-md-12">
            <div class="form-group">
                <div class="col-sm-2">
                    <b>Upload File</b>
                </div>
                <div class="col-sm-3">
                    <input type="file" class="custom-file-input" id="file" name="file">
                </div>
                <div class="col-sm-7 text-left">
                    <input type="submit" value="Upload" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>

