@*@model IEnumerable<ApiIntegration.Core.Models.GoogleDriveFile>*@
@model IEnumerable<FileUploadWebApp.Models.GoogleDriveFiles>

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Google Drive Upload</h2><hr />

<div class="row">
    @using (Html.BeginForm("UploadFile", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-lg-12 col-md-12">
            <div class="form-group">
                <div class="col-sm-2">
                    Upload file
                </div>
                <div class="col-sm-3">
                    <input type="file" class="custom-file-input" id="file" name="file">
                </div>
                <div class="col-sm-7 text-left">
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<hr />
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th class="text-center">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td class="text-center">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

