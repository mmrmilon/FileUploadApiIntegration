<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-inverse {
            background-color: #A52A2A !important;
            border-color: #A52A2A !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ExactOnline API", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Google Drive", "Upload", "FileUpload")</li>
                    <li>@Html.ActionLink("Dropbox", "DropboxFile", "Dropbox")</li>
                    <li>@Html.ActionLink("ExactOnline", "ExactFile", "Exact")</li>
                    <li>@Html.ActionLink("Google Drive to ExactOnline", "Index", "GoogleDriveExact")</li>
                    <li>@Html.ActionLink("Dropbox to ExactOnline", "Index", "DropboxExact")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:10px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mizanur Rahman</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jstree")

    @RenderSection("scripts", required: false)
</body>
</html>
